<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#091775"
    android:orientation="vertical"
    tools:context=".modificarActivity">

    <TextView
        android:id="@+id/CONFIGURACION"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="MODIFICACION DE APP"
        android:textSize="80px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#FDFDFD"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="HOST:" />
        <EditText
            android:id="@+id/host"
            android:layout_width="500px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="192.168.0.0" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:background="#FDFDFD"
        android:text="CONFIGURACION DE HABITACIONES" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:background="#FDFDFD"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="500px"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:gravity="center_vertical"
                android:text="NO. SECCIONES" />

            <RadioButton
                android:id="@+id/seccionc1"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:text="1 SECCION" />

            <RadioButton
                android:id="@+id/secccionc2"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:text="2 SECCIONES" />
        </RadioGroup>
        <RadioGroup
            android:layout_width="500px"
            android:layout_height="250px" >
            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:gravity="center_vertical"
                android:text="NO. CUARTOS POR SECCION" />

            <RadioButton
                android:id="@+id/h4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CUATRO" />

            <RadioButton
                android:id="@+id/h5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CINCO" />

            <RadioButton
                android:id="@+id/h6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SEIS" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#FDFDFD"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="NO. CENTRAL ENFERMERIA" />

        <EditText
            android:id="@+id/nocentral"
            android:layout_width="500px"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="ej. 1"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="#FDFDFD"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="300px"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="ALARMA AUDITIVA" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <RadioButton
                android:id="@+id/si"
                android:layout_width="match_parent"
                android:layout_height="75px"
                android:text="SI" />

            <RadioButton
                android:id="@+id/no"
                android:layout_width="match_parent"
                android:layout_height="75px"
                android:text="NO" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#FDFDFD"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="300px"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="EMAIL:" />

        <EditText
            android:id="@+id/email"
            android:layout_width="500px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="ejemplo@gmail.com"
            android:ems="10"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDFDFD"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="500px"
            android:layout_height="120px"
            android:background="#49BC20"
            android:layout_marginRight ="200px"
            app:srcCompat="@android:drawable/ic_menu_rotate" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="500px"
            android:layout_height="120px"
            android:background="#2196F3"
            app:srcCompat="@android:drawable/ic_menu_revert" />
    </LinearLayout>


</LinearLayout>